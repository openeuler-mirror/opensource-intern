        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rdnf'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rdnf",
                    "--package=rdnf"
                ],
                "filter": {
                    "name": "rdnf",
                    "kind": "bin"
                }
            },
